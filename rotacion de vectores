
#include "stdafx.h"
#include "iostream"
#include "conio.h"

using namespace std;

void main ()
{
	int n,k;
	int v[50];
	cout<<"Dimension del vector: ";
	cin>>n;
	cargar(v,n);
	mostrar(v,n);
	cout<<"Numero de rotaciones: ";
	cin>>k;
	rotar (v,n,k);
	getch();
}

void cargar(int v[], int n)
{
 int x; 
 for(int i=0;i<n;i++)
 {
	 cout<<"Elemento:";
	 cin>>x;
	 v[i]=x;
 }
}

void mostrar(int v[], int n)
{
 for(int i=0;i<n;i++)
	 cout<<v[i];

 cout<<endl;
}

void insertarPosicion(int v[], int &n, int x, int pos)
{
 if(pos < 0 || pos > n)
	 cout<<"Posicion no valida...!!!";
 else
 {
   int k=n-1;
   while(k>=pos)
   {
      v[k+1]=v[k];
	  k--;
   }
   v[pos]=x;
   n=n+1;
 }
}

void insertarUlt(int v[], int &n, int x)
{
   insertarPosicion(v,n,x,n); 
}

void eliminarPosicion(int v[], int &n, int pos)
{
 if(pos < 0 || pos > n)
  	cout<<"Posicion no valida...!!!";
 else
 {
    int k=pos + 1;
    while(k < n)
    {
       v[k-1]=v[k];
	   k++;
    }	
    n=n-1;
 }
}

void eliminarPri(int v[], int &n)
{
   eliminarPosicion(v,n,0); 
}

void rotar (int v[], int n, int k)
{
	int i=1; // cantidad de veces que rota (empieza con 1 rotacion)
	while (i<=k)
	{
		insertarUlt (v,n,v[0]);
		eliminarPri(v,n);
		i++;
	}
